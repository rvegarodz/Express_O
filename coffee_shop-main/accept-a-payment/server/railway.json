{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
      "builder": "NIXPACKS",
      "buildCommand": "go build server.go",
      "staticDirs": [
        "client"
      ]
    },
    "deploy": {
      "numReplicas": 1,
      "startCommand": "./server",
      "restartPolicyType": "ON_FAILURE",
      "restartPolicyMaxRetries": 10
    }
  }
  